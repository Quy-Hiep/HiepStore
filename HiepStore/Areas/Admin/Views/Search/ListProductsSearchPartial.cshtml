@model List<Product>
@if (Model != null)
{
    foreach (var item in Model)
    {
        <tr>

            <td>
                @item.Id
            </td>
            <td>
                <div class="d-flex align-items-center">
                    <img class="img-fluid rounded" src="~/assets/images/products/@item.Thumb" style="max-width: 60px" alt="" />
                    <h6 class="m-b-0 m-l-10">@item.Name</h6>
                </div>
            </td>
            @if (@item.CategoryId == null)
            {
                <td>không có</td>

            }else
            {
                <td>@item.Category.Name</td>
            }
            <td>@item.Price.Value.ToString("#,##0") VNĐ</td>
            <td>@item.UnitsInStock</td>
            <td>
                @if (item.UnitsInStock.Value > 0)
                {
                    <div class="d-flex align-items-center">
                        <div class="badge badge-success badge-dot m-r-10"></div>
                        <div>Còn hàng</div>
                    </div>
                }
                else
                {
                    <div class="d-flex align-items-center">
                        <div class="badge badge-success badge-dot m-r-10"></div>
                        <div>Hết hàng</div>
                    </div>
                }
            </td>
            <td>
                <a class="btn btn-primary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminProducts" asp-action="Details" asp-route-id="@item.Id">Chi tiết</a>
                <a class="btn btn-secondary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminProducts" asp-action="Edit" asp-route-id="@item.Id">Sửa</a>
                <a class="btn btn-success btn-tone m-r-5" asp-area="Admin" asp-controller="AdminProducts" asp-action="DeleteTrash" asp-route-id="@item.Id">Xóa</a>

            </td>
        </tr>
    }
}