@model HiepStore.ModelViews.HomeModel
@{
    ViewData["Title"] = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Product> allProduct = ViewBag.AllProducts;
}

<div class="container">
    <!-- ========================= SECTION MAIN  ========================= -->
    <section class="section-main padding-y">
        <main class="card">
            <div class="card-body">

                <div class="row">
                    <aside class="col-lg col-md-3 flex-lg-grow-0">
                        <nav class="nav-home-aside">
                            <h6 class="title-category">DANH MỤC<i class="d-md-none icon fa fa-chevron-down"></i></h6>
                            <ul class="menu-category">
                                @foreach (var item in Model.ListCategory.Take(7))
                                {
                                    <li><a asp-controller="Product" asp-action="ProductCategory" asp-route-id="@item.Id">@item.Name</a></li>
                                }
                                </li>
                                <li><a asp-controller="Category" asp-action="Index">Tất cả danh mục</a></li>
                            </ul>
                        </nav>
                    </aside> <!-- col.// -->
                    <div class="col-md-9 col-xl-7 col-lg-7">

                        <!-- ================== COMPONENT SLIDER  BOOTSTRAP  ==================  -->
                        <div id="carousel1_indicator" class="slider-home-banner carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carousel1_indicator" data-slide-to="0" class="active"></li>
                                <li data-target="#carousel1_indicator" data-slide-to="1"></li>
                                <li data-target="#carousel1_indicator" data-slide-to="2"></li>
                                <li data-target="#carousel1_indicator" data-slide-to="3"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="~/assets/images/banners/slide1.png" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/assets/images/banners/slide1.png" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/assets/images/banners/slide3.png" alt="Third slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/assets/images/banners/slide4.png" alt="fourth slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carousel1_indicator" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carousel1_indicator" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <script type="text/javascript">
                            $(document).ready(function () {
                                $('.carousel').carousel();
                            });
                        </script>
                        <!-- ==================  COMPONENT SLIDER BOOTSTRAP end.// ==================  .// -->

                    </div> <!-- col.// -->
                    <div class="col-md d-none d-lg-block flex-grow-1">
                        <aside class="special-home-right">
                            <h6 class="bg-blue text-center text-white mb-0 p-2">Danh mục phổ biến</h6>
                            @foreach (var item in Model.ListCategory.Take(3))
                            {
                                <div class="card-banner border-bottom">
                                    <div class="py-3" style="width:80%">
                                        <h6 class="card-title">@item.Name</h6>
                                        <a asp-controller="Product" asp-action="ProductCategory" asp-route-id="@item.Id" class="btn btn-secondary btn-sm"> Xem ngay </a>
                                    </div>
                                    <img src="~/assets/images/category/@item.Thumb" height="80" class="img-bg">
                                </div>
                            }




                        </aside>
                    </div> <!-- col.// -->
                </div> <!-- row.// -->

            </div> <!-- card-body.// -->
        </main> <!-- card.// -->

    </section>
    <!-- ========================= SECTION MAIN END// ========================= -->
    <!-- =============== SECTION DEAL =============== -->
    <section class="padding-bottom">
        <div class="card card-deal">
            <div class="col-heading content-body">
                <header class="section-heading">
                    <h3 class="section-title">GIỜ VÀNG DEAL SỐC</h3>
                    <p>Hygiene equipments</p>
                </header><!-- sect-heading -->
                <div class="timer">
                    <div> <span class="num">04</span> <small>Ngày</small></div>
                    <div> <span class="num">12</span> <small>Giờ</small></div>
                    <div> <span class="num">58</span> <small>Phút</small></div>
                    <div> <span class="num">02</span> <small>giây</small></div>
                </div>
            </div> <!-- col.// -->
            <div class="row no-gutters items-wrap">
                @foreach (var item in Model.ListProduct.Where(n => n.TypeId == 1).Take(5))
                {
                    <div class="col-md col-6">
                        <figure class="card-product-grid card-sm">
                            <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id" class="img-wrap">

                                <img src="~/assets/images/products/@item.Thumb">
                            </a>
                            <div class="text-wrap p-3">
                                <a href="@Url.Action("Detail", "Product", new {Id = item.Id})" class="title">@item.Name</a>
                                <span class="h6 price text-muted" style="text-decoration: line-through;">@Convert.ToDecimal(item.Price).ToString("#,##") đ</span>
                                <br />
                                <span class="h6 price">@Convert.ToDecimal(item.Discount).ToString("#,##") đ</span>
                                <span class="badge badge-danger"> -20% </span>
                            </div>
                        </figure>
                    </div> <!-- col.// -->
                }


            </div>
        </div>

    </section>
    <!-- =============== SECTION DEAL // END =============== -->
    <!-- =============== SECTION 1 =============== -->
    <section class="padding-bottom">
        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">ĐIỆN THOẠI NỔI BẬT NHẤT</h4>
        </header>

        <div class="card card-home-category">
            <div class="row no-gutters">
                <div class="col-md-3">

                    <div class="home-category-banner bg-light-orange">
                        <h5 class="title">Điện thoại cấu hình cao với giá tốt nhất thị trường</h5>
                        <a href="" class="btn btn-outline-primary rounded-pill">Xem tất cả điện thoại</a>
                        <img src="~/Content//images/products/phone.jpg" class="img-bg">
                    </div>

                </div> <!-- col.// -->
                <div class="col-md-9">
                    <ul class="row no-gutters bordered-cols">
                        @foreach (var item in Model.ListProduct.Where(n => n.CategoryId == 1 && n.TypeId == 2).Take(8))
                        {
                            <li class="col-6 col-lg-3 col-md-4">
                                <a href="@Url.Action("Detail", "Product", new {Id = item.Id})" class="item">
                                    <div class="card-body">
                                        <span class="title">@item.Name </span>
                                        <br />
                                        <span class="small price text-muted" style="text-decoration: line-through;">@Convert.ToDecimal(item.Price).ToString("#,##") đ</span>
                                        <span class="h7 price">@Convert.ToDecimal(item.Discount).ToString("#,##") đ</span>
                                        <img class="img-sm float-right" src="~/assets/images/products/@item.Thumb">
                                        <p class="text-muted"> @item.ShortDesc </p>
                                    </div>
                                </a>
                            </li>
                        }


                    </ul>
                </div> <!-- col.// -->
            </div> <!-- row.// -->
        </div> <!-- card.// -->
    </section>
    <!-- =============== SECTION 1 END =============== -->
    <!-- =============== SECTION 2 =============== -->
