@model HiepStore.ModelViews.XemDonHang
@{
    var total = Model.ChiTietDonHang.Sum(x => x.TotalMoney).Value.ToString("#,##0");
}
@foreach (var item in Model.ChiTietDonHang)
{
    <tr>
    <td width="65">
            <img src="~/assets/images/products/@item.Product.Thumb" class="img-xs border">
    </td>
    <td>
            <p class="title mb-0">@item.Product.Name</p>
            <var class="price text-muted">@item.Product.Discount</var>
    </td>
        <td> Số lượng <br> @item.Amount </td>
        <td> Thành tiền <br> @item.TotalMoney.Value.ToString("#,##0") VNĐ </td>
    <td width="200">
        <a asp-action="Detail" asp-controller="Product" asp-route-Alias="@item.Product.Alias" class="btn btn-outline-primary">Xem sản phẩm</a>
    </td>
</tr>

}



