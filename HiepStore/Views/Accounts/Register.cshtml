@model HiepStore.ModelViews.RegisterViewModel

@{
    ViewData["Title"] = "Đăng ký tài khoảnn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content padding-y">

    <!-- ============================ COMPONENT REGISTER   ================================= -->
    <div class="card mx-auto" style="max-width:520px; margin-top:40px;">
        <article class="card-body">
            <header class="mb-4"><h4 class="card-title">Đăng kí</h4></header>
            <form asp-action="Register" asp-controller="Accounts">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row">
                    <div class="col form-group">
                        <label>Tên</label>
                        <input type="text" asp-for="FirstName" class="form-control" placeholder="Tên">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div> <!-- form-group end.// -->
                    <div class="col form-group">
                        <label>Họ</label>
                        <input type="text" asp-for="LastName" class="form-control"  placeholder="Họ">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div> <!-- form-group end.// -->
                </div> <!-- form-row end.// -->
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" asp-for="Email" class="form-control" placeholder="Địa chỉ Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <small class="form-text text-muted">Chúng tôi sẽ không chia sẻ email của bạn cho bất kì ai.</small>
                </div> <!-- form-group end.// -->
                <div class="form-group">
                    <label>Điện thoại</label>
                    <input type="tel" asp-for="Phone" class="form-control" placeholder="Số điện thoại">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div> <!-- form-group end.// -->


                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Tạo mật khẩu</label>
                        <input type="password" asp-for="Password" class="form-control" placeholder="Mật khẩu">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div> <!-- form-group end.// -->
                    <div class="form-group col-md-6">
                        <label>Nhập lại mật khẩu</label>
                        <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Nhập lại mật khẩu">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div> <!-- form-group end.// -->
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block"> Đăng kí  </button>
                </div> <!-- form-group// -->
                <div class="form-group">
                    <label class="custom-control custom-checkbox"> <input type="checkbox" class="custom-control-input" checked=""> <div class="custom-control-label"> Tôi đồng ý với <a href="#">các điều khoản và điều kiện</a>  </div> </label>
                </div> <!-- form-group end.// -->

            </form>

        </article><!-- card-body.// -->
    </div> <!-- card .// -->
    <p class="text-center mt-4">Đã có tài khoản? <a href="~/Accounts/Login">Đăng nhập</a></p>
    <br><br>
    <!-- ============================ COMPONENT REGISTER  END.// ================================= -->


</section>
<!-- ========================= SECTION CONTENT END// ========================= -->
