@model HiepStore.ModelViews.ChangePasswordViewModel

<div class="card">
	<div class="card-body">
		<h2 class="text-center mt-3 mb-5">Đổi mật khẩu</h2>
		<form class="row d-flex justify-content-center" asp-controller="Accounts" asp-action="ChangePassword" method="post">
			<div class="form-group col-md-8">
				<label>Mật khẩu hiện tại</label>
				<input asp-for="PasswordNow" type="password" class="form-control" placeholder="nhập mật khẩu hiện tại">
				<span asp-validation-for="PasswordNow" class="text-danger"></span>
			</div> <!-- form-group end.// -->
			<div class="form-group col-md-8">
				<label>Mật khẩu mới</label>
				<input type="email" asp-for="Password" type="password" class="form-control" placeholder="nhập mật khẩu mới">
				<span asp-validation-for="Password" class="text-danger"></span>
			</div> <!-- form-group end.// -->
			<div class="form-group col-md-8">
				<label>Nhập lại mật khẩu mới</label>
				<input type="email" asp-for="ConfirmPassword" type="password" class="form-control" placeholder="nhập lại mật khẩu mới">
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			</div> <!-- form-group end.// -->
			<div class="col-md-12">
				<div class="d-flex justify-content-center">
					<button type="submit" class="btn btn-primary m-3">Xác nhận</button>
					<button href="#" class="btn btn-light m-3">Quên mật khẩu?</button>

				</div>
			</div>
			<br><br><br><br><br><br>
		</form>
	</div> <!-- card-body.// -->
</div> <!-- card .// -->
