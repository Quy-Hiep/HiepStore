@model HiepStore.Models.News
@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/News/_NewsLayout.cshtml";

    string url = $"/tin-tuc/{Model.Alias}-{Model.Id}";
    string urlAuthor = $"/tin-tuc/profile/{Model.AccountId}";
    string urlShareFB = $"/{Model.Alias}-{Model.Id}.html";
    string urlCommentFB = $"/{Model.Alias}-{Model.Id}.html";
    List<News> Baivietlienquan = ViewBag.Baivietlienquan;

}
<meta property="og:url" content="@urlShareFB" />
<meta property="og:type" content="website" />
<meta property="og:title" content="@Model.Title" />
<meta property="og:description" content="@Model.Subtitle" />
@*<meta property="og:image" content="@Model.Thumb" />
*@
<section class="section single-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
                <div class="page-wrapper">
                    <div class="blog-title-area text-center">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/tin-tuc.html">Trang chủ Tin tức</a></li>
                            <li class="breadcrumb-item active">@Model.Title</li>
                        </ol>

                        <span class="color-orange"><a href="tech-category-01.html" title="">@Model.Tags.Name</a></span>

                        <h3>@Model.Title</h3>

                        <div class="blog-meta big-meta">
                            <small><a href="#" title="">@Model.CreatedAt</a></small>
                            <small><a href="@urlAuthor" title="">@Model.Author</a></small>
                            <small><a href="#" title=""><i class="fa fa-eye"></i> @Model.Views</a></small>
                        </div><!-- end meta -->

                        <div class="post-sharing">
                            <ul class="list-inline">
                                <li><div class="fb-share-button" data-href="@urlShareFB" data-layout="button_count" data-size="large"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Chia sẻ</a></div></li>
                                <!--<li><a href="#" class="fb-button btn btn-primary"><i class="fa fa-facebook"></i> <span class="down-mobile">Share on Facebook</span></a></li>-->
                                <!--<li><a href="#" class="tw-button btn btn-primary"><i class="fa fa-twitter"></i> <span class="down-mobile">Tweet on Twitter</span></a></li>-->
                                
                            </ul>
                        </div><!-- end post-sharing -->
                    </div><!-- end title -->

                    <div class="single-post-media">
                        <img src="/assets/images/news/@Model.Thumb" alt="" class="img-fluid" style="max-height: 300px">
                    </div><!-- end media -->

                    <div class="blog-content">  
                        <div class="pp">
                            <p>@Html.Raw(Model.Subtitle)</p>
                            <h3><strong></strong></h3>
                            <p> </p>
                            <p> </p>
                        </div><!-- end pp -->
                        @Html.Raw(Model.Contents)

                    </div><!-- end content -->

                    <div class="blog-title-area">
                        <div class="tag-cloud-single">
                            <span>Thẻ</span>
                            @foreach (var item in ViewBag.ListTag)
                            {
                                <small><a href="#" title="">@item.Name</a></small>
                            }
                        </div><!-- end meta -->

                        <div class="post-sharing">
                            <ul class="list-inline">
                                <li><div class="fb-share-button" data-href="@urlShareFB" data-layout="button_count" data-size="large"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Chia sẻ</a></div></li>
                            </ul>
                        </div><!-- end post-sharing -->
                    </div><!-- end title -->

                    <hr class="invis1">

                    <div class="custombox authorbox clearfix">
                        <h4 class="small-title">Thông tin người viết</h4>
                        <div class="row">
                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                <img src="upload/author.jpg" alt="" class="img-fluid rounded-circle"> 
                            </div><!-- end col -->

                            <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
                                <h4><a href="#">@Model.Author</a></h4>
                                <p>có những người không dám bước đi vì sợ gãy chân, nhưng sợ gãy chân mà không dám  bước thì khác nào chân đã gãy</p>

                                <div class="topsocial">
                                    <a href="#" data-toggle="tooltip" data-placement="bottom" title="Facebook"><i class="fa fa-facebook"></i></a>
                                    <a href="#" data-toggle="tooltip" data-placement="bottom" title="Youtube"><i class="fa fa-youtube"></i></a>
                                    <a href="#" data-toggle="tooltip" data-placement="bottom" title="Pinterest"><i class="fa fa-pinterest"></i></a>
                                    <a href="#" data-toggle="tooltip" data-placement="bottom" title="Twitter"><i class="fa fa-twitter"></i></a>
                                    <a href="#" data-toggle="tooltip" data-placement="bottom" title="Instagram"><i class="fa fa-instagram"></i></a>
                                    <a href="#" data-toggle="tooltip" data-placement="bottom" title="Website"><i class="fa fa-link"></i></a>
                                </div><!-- end social -->

                            </div><!-- end col -->
                        </div><!-- end row -->
                    </div><!-- end author-box -->

                    <hr class="invis1">

                    <div class="custombox clearfix">
                        <h4 class="small-title">Có thể bạn cũng thích</h4>
                        <div class="row">
                            @foreach (var item in ViewBag.Baivietlienquan)
                            {
                                string urlTitle = $"/tin-tuc/{item.Alias}-{item.Id}";
                                <div class="col-lg-6">
                                    <div class="blog-box">
                                        <div class="post-media">
                                            <a href="tech-single.html" title="">
                                                <img src="/assets/images/news/@item.Thumb" alt="" class="img-fluid" style="max-height: 200px">
                                                <div class="hovereffect">
                                                    <span class=""></span>
                                                </div><!-- end hover -->
                                            </a>
                                        </div><!-- end media -->
                                        <div class="blog-meta">
                                            <h4><a href="@urlTitle" title="">@item.Title</a></h4>
                                            <small><a href="@urlTitle" title="">@item.Tags.Name</a></small>
                                            <small><a href="@urlTitle" title="">@item.CreatedAt</a></small>
                                        </div><!-- end meta -->
                                    </div><!-- end blog-box -->
                                </div>

                                <!-- end col -->
                            }
                        </div><!-- end row -->
                    </div><!-- end custom-box -->
                    <hr class="invis1">

                    <div class="custombox clearfix">
                        <h4 class="small-title">Bình luận</h4>
                        <div class="fb-comments" data-href="@urlCommentFB" data-width="100%" data-numposts="5"></div>

                    </div>

                    <hr class="invis1">

                </div><!-- end page-wrapper -->
            </div><!-- end col -->

            <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12">
                <div class="sidebar">
                    <div class="widget">
                        <h2 class="widget-title">Cộng tác với chúng tôi</h2>

                        <div class="row text-center">
                            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-6">
                                <a href="https://www.facebook.com/nquyhiep" class="social-button facebook-button">
                                    <i class="fa fa-facebook"></i>
                                    <p>27k</p>
                                </a>
                            </div>

                            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-6">
                                <a href="https://twitter.com/quyhiep01" class="social-button twitter-button">
                                    <i class="fa fa-twitter"></i>
                                    <p>98k</p>
                                </a>
                            </div>

                            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-6">
                                <a href="https://www.youtube.com/@@quyhiep" class="social-button google-button">
                                    <i class="fa fa-google-plus"></i>
                                    <p>17k</p>
                                </a>
                            </div>

                            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-6">
                                <a href="https://www.youtube.com/@@quyhiep" class="social-button youtube-button">
                                    <i class="fa fa-youtube"></i>
                                    <p>22k</p>
                                </a>
                            </div>
                        </div>
                    </div><!-- end widget -->
                    <div class="widget">
                        <h2 class="widget-title">bài viết được xem nhiều</h2>
                        @foreach (var item in ViewBag.Baivietlienquan)
                        {
                            string urlll = $"/tin-tuc/{item.Alias}-{item.Id}";
                            <div class="blog-list-widget">
                                <div class="list-group">
                                    <a href="@urlll" class="list-group-item list-group-item-action flex-column align-items-start">
                                        <div class="w-100 justify-content-between">
                                            <img src="~/assets/images/news/@item.Thumb" alt="" class="img-fluid float-left">
                                            <h5 class="mb-1" style="display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;overflow: hidden;">@item.Title</h5>
                                            <small>@item.CreatedAt</small>
                                        </div>
                                    </a>

                                </div>
                            </div>

                            <!-- end blog-list -->
                        }
                    </div><!-- end widget -->
                </div><!-- end sidebar -->
            </div><!-- end col -->
        </div><!-- end row -->
    </div><!-- end container -->
</section>

